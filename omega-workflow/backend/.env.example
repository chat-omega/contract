# Environment Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# JWT Authentication Configuration (REQUIRED)
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (for future use)
# DATABASE_URL=mongodb://localhost:27017/omega-workflow
# DATABASE_URL=postgresql://user:password@localhost:5432/omega_workflow

# API Keys (for future integrations)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes (10 * 1024 * 1024)

# Logging
LOG_LEVEL=debug

# Redis Configuration (for sessions/caching - future use)
# REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications - future use)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@example.com

# AWS Configuration (for S3 storage - future use)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_FILE_UPLOAD=true
ENABLE_WORKFLOWS=true
ENABLE_SCORING=true

# Frontend Build Path (production)
# FRONTEND_BUILD_PATH=../frontend/build
